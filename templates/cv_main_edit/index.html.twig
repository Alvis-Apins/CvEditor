{% extends 'base.html.twig' %}

{% block title %}Hello CvMainEditController!{% endblock %}

{% block body %}
    <div class="flex items-center justify-center w-full">
        <div class="w-full items-center rounded mb-10">
            <div class="background-silver border-b-4 border-black py-6 w-full">
                <h1 class="flex justify-center text-3xl color-gold-leaf"> Create / Edit Cv </h1>
            </div>
            <div class="flex justify-center">

                <form method="post">
                    {% if base_info is defined %}
                        <button type="submit" name="action" value="create"
                                class="border-b-4 border-orange-200 m-2 shadow-lg border-solid background-black-steel color-gold-leaf border border-black px-4 py-2 h-10 rounded float-right transition duration-500 hover:scale-105">
                            Generate Cv
                        </button>
                        <button type="submit" name="action" value="photo"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Photo
                        </button>
                        <button type="submit" name="action" value="cv_web_links_edit"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add WebLink
                        </button>
                        <button type="submit" name="action" value="cv_language_edit"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Language
                        </button>
                        <button type="submit" name="action" value="cv_references_edit"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Reference
                        </button>
                        <button type="submit" name="action" value="cv_work_experience_edit"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Work Experience
                        </button>
                        <button type="submit" name="action" value="cv_education_edit"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Education
                        </button>
                        <button type="submit" name="action" value="cv_address_edit"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Address
                        </button>
                    {% endif %}
                    {% if base_info is not defined %}
                        <button type="submit" name="action" value="edit_cv"
                                class="border-b-4 border-black m-2 shadow-lg px-4 py-2 h-10 rounded float-right background-silver bg-opacity-75 color-gold-leaf hover:text-orange-200 hover:bg-black transition duration-500 hover:scale-105">
                            Add Base Info
                        </button>
                    {% endif %}
                </form>

            </div>
        </div>
    </div>
    <div class="flex items-center justify-center w-full pb-20">
        <div class="w-full">
            {% if base_info is defined %}
                {% if base_info != null %}
                    <button type="button"
                            class="collapsible background-black-steel color-gold-leaf cursor-pointer py-1 w-full mt-2">
                        Base
                        Info
                    </button>
                    <div class="hidden overflow-hidden">
                        <div>
                            <table class="min-w-full mb-2">
                                <thead class="background-silver color-gold-leaf">
                                <tr class="px-6 py-2">
                                    <th scope="col" class="text-sm font-medium px-4 w-20">
                                        #
                                    </th>
                                    <th scope="col" class="text-sm font-medium text-left">
                                        Name
                                    </th>
                                    <th scope="col" class="text-sm font-medium text-left">
                                        Surname
                                    </th>
