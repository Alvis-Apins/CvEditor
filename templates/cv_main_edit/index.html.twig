                                            <form action="{{ path('app_cv_main_delete') }}" method="post">
                                                <input type="hidden" value="{{ reference.id }}" id="reference" name="reference">
                                                <button type="submit" class="rounded border border-black text-gray-50  px-4 hover:bg-black transition duration-500 hover:scale-110">
