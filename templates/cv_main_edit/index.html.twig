                                            {% endif %}
                                        </td>
                                        <td class="text-sm text-white font-light py-2 pr-3 text-left">
                                            {{ education.startDate|date('Y-m-d') }}
                                        </td>
                                        <td class="text-sm text-white font-light py-2 pr-3 text-left">
                                            {{ education.endDate|date('Y-m-d') }}
                                        </td>
                                        <td class="text-sm text-white font-light py-2 pr-3 w-60 break-all overflow-auto text-left">
                                            <form action="{{ path('app_cv_main_edit') }}" method="post">
                                                <input type="hidden" value="{{ education.id }}" id="education" name="education">
                                                <button type="submit" class="rounded border border-black text-gray-50  px-4 hover:bg-black transition duration-500 hover:scale-110">
