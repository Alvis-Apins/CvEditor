                                            <td class="text-sm text-white font-light py-2 pl-8">
                                                {{ loop.index }}
                                            </td>
                                            <td class="text-sm text-white font-light py-2 pr-3 text-left">
                                                {{ skill.job.company }}
                                            </td>
                                            <td class="text-sm text-white font-light py-2 pr-3 text-left">
